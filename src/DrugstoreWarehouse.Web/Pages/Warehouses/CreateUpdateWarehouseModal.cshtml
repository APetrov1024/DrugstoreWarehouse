@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model DrugstoreWarehouse.Web.Pages.Warehouses.CreateUpdateWarehouseModalModel
@{
    Layout = null;
    var caption = Model.VM.WarehouseId.HasValue ? "Новый склад" : "Редактирование склада";
}

<abp-modal size="Large">
    <abp-modal-header title="@caption"></abp-modal-header>
    <abp-modal-body>
        <abp-input asp-for="@Model.VM.WarehouseId"></abp-input>
        <abp-input asp-for="@Model.VM.Name"></abp-input>
        <abp-select asp-for="@Model.VM.DrugstoreId" asp-items="@Model.VM.Drugstores"></abp-select>
    </abp-modal-body>
    <abp-modal-footer buttons="@AbpModalButtons.Save | @AbpModalButtons.Cancel"></abp-modal-footer>
</abp-modal>